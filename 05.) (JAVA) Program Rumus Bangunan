sisisegitiga = Math.pow(lebar,2) - Math.pow(L,2);
System.out.println("Hasil sisi segitiga yang hasilnya berbentuk akar : " + sisisegitiga );
sqrt = Math.sqrt(sisisegitiga);
System.out.println("Akar dari " + sisisegitiga + " yaitu : " + sqrt );
LALAS/*L_Selimut */ = (sisi*lebar) + (sisi*L) +(sisi*sqrt);
System.out.println("Luas selimutnya adalah : " + LALAS);
System.out.println("");
System.out.println("eittsss ini belum selesai.....tekan enter untuk melihat hasil Luas Permukaan Prisma Segitiga");
input.nextLine();
L_alas = 2*(1.0/2.0*sqrt*L);
Lp_PS = L_alas + LALAS;
System.out.println( "\t      :2*(1/2*" +  sqrt + " * " + L + ") + (" + sisi + " * " + lebar + ") + (" + sisi + " * " + sisisegitiga + "  ) + (" +  sisi + " * " +  sqrt + " ) = " + Lp_PS );
System.out.println( "hasil dari Luas Permukaan Prisma Segitiga adalah : " +  Lp_PS + "cm" );
break;




