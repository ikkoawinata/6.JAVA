System.out.println("Hasilnya luas permukaan kerucut (phi =22/7 ) : " + rumusa + " cm " );
System.out.println("Hasilnya luas permukaan kerucut (phi =3.14 ) : " + rumus2 + " cm " );
break;




case 31:
System.out.println("---------31.) MENGHITUNG VOLUME TABUNG (JARI-JARI)---------");
System.out.println("Masukkan jari-jari kerucut   : ");
r25/*r */= input.nextDouble();
System.out.println("Masukkan tinggi kerucut   : ");
T25/*sisi kerucut */= input.nextDouble();
rumusa = 1.0/3.0 * 22.0/7.0 * Math.pow(r25,2) * T25;
rumus2 = 1.0/3.0 * 3.14 * Math.pow(r25,2) * T25;
System.out.println ("Rumus A yaitu : Luas = 1/3 * phi * r pangkat 2 * tinggi = 1/3 * 22/7 * " + Math.pow (r25,2) + " * " + T25 + " = " +  rumusa);
System.out.println ("Rumus B yaitu : Luas = 1/3 * phi * r pangkat 2 * tinggi = 1/3 * 3.14 * " + Math.pow (r25,2) + " * " + T25 + " = " +  rumus2);
System.out.println ("Hasilnya volume kerucut (phi =22/7 ) : " + rumusa + " cm ");
System.out.println ("Hasilnya volume kerucut (phi =3.14 ) : " + rumus2 + " cm ");
break;



case 32:
System.out.println("--------- 32.) MENGHITUNG LUAS BOLA ---------");
System.out.println("Masukkan jari-jari bola atau diameter bola   : ");
r25 = input.nextDouble();
rumusa = 4*22/7*Math.pow(r25,2);
rumus2 = 4*3.14*Math.pow(r25,2);
System.out.println("Rumus A yaitu : Luas = 4 * phi * r pangkat 2 = 4 * 22/7 * " + Math.pow (r25,2) + " = " + rumusa );
System.out.println("Rumus B yaitu : Luas = 4 * phi * r pangkat 2 = 4 * 3.14 * " + Math.pow (r25,2) + " = " + rumus2 );
System.out.println( "Hasilnya luas permukaan tabung (phi =22/7 ) : " +  rumusa + " cm ");
System.out.println( "Hasilnya luas permukaan tabung (phi =3.14 ) : " +  rumus2 + " cm ");
break;



case 33:
System.out.println("---------33.) MENGHITUNG VOLUME BOLA  ---------");
System.out.println("Masukkan jari-jari bola atau diameter bola   : ");
r25 = input.nextDouble();
rumusa = 4.0/3.0*22/7*Math.pow(r25,3);
rumus2 = 4.0/3.0*3.14*Math.pow(r25,3);
System.out.println( "Rumus A yaitu : Luas = 4/3 * phi * r pangkat 3 = 4/3 * 22/7 * " + Math.pow(r25,3) + " = " + rumusa);
System.out.println( "Rumus B yaitu : Luas = 4/3 * phi * r pangkat 3 = 4/3 * 3,14 * " + Math.pow(r25,3) + " = " + rumus2 );
System.out.println( "Hasilnya luas permukaan tabung (phi =22/7 ) : " + rumusa + " cm " );
System.out.println( "Hasilnya luas permukaan tabung (phi =3.14 ) : " + rumus2 + " cm " );
break;



}
System.out.print("\nAda pesanan lain [Y/N]? ");
j = input.next().charAt(0);
input.nextLine();
}
while (j== 'Y' || j == 'y');
System.out.println("Terima kasih telah menggunakan program ini");
System.out.println("Made by ikkoc_awinata");
}
}
